# Object files (no colon)
#----------------------------------------------------------------------------------------------------
obj = p01.o List01.o
#----------------------------------------------------------------------------------------------------
p01: ${obj}
	g++ -o p01 ${obj} -lm
#----------------------------------------------------------------------------------------------------
p01.o: p01.cpp List01.h
	g++ -g -c p01.cpp
#----------------------------------------------------------------------------------------------------
List01.o: List01.cpp List01.h
	g++ -g -c List01.cpp
